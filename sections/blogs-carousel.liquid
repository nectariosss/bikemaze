{%- render 'stylesheet', name: 'products-carousel' -%}














{%style%}
  .blog-rotator {
    display: flex;
    flex-direction: row;
  }

  .blog-display-images {
    display: none
  }

  .blog-display-images.display {
    display: block;
  }

{%endstyle%}


<span id="left-arrow">
  {%- render 'icon-carousel-arrow' -%}
</span>
<div class="blog-rotator">
  <img id="left-arrow" src=""/>
  {%for blog in blogs.news.articles%}
    <a href="{{blog.url}}">
      <img
      class="blog-display-images"
      id="{{blog.id}}"
      src="{{blog.image | img_url: 'master'}}">
    </a>
  {%endfor%}
  </div>
  <span id="right-arrow">
    {%- render 'icon-carousel-arrow' -%}
  </span>

<script>
  const rightArrow = document.getElementById('right-arrow');
  const leftArrow = document.getElementById('left-arrow');
  const imagesList = document.getElementsByClassName('blog-display-images');
  imagesList[0].classList.add('display');

  for (let i = 0; i < imagesList.length; i++) {
  }

  rightArrow.addEventListener('click',()=>{
    rotator("right");
  })

  function rotator(direction) {
  
  if (direction === 'right') {
    const imagesList = document.getElementsByClassName('blog-display-images');
    const currentDisplay = document.getElementsByClassName('blog-display-images display');
    let displayIndex = 0;
    for (let i = 0; i < imagesList.length; i++) {
      if (currentDisplay[0].classList === imagesList[i].classList) {
        displayIndex = i
      }
    }
    let nextDisplayIndex = displayIndex + 1;

    if (nextDisplayIndex === (imagesList.length )) {
      nextDisplayIndex = 0;
    }

    imagesList[displayIndex].classList.remove('display');
    imagesList[nextDisplayIndex].classList.add('display');
    }

  };

</script>














{% if section.settings.carousel_coll != blank %}
  {% assign limit = section.settings.carousel_coll_lm | plus: 0 %}
  <div class="container-max">
    {% if collections[section.settings.carousel_coll].products_count != 0 %}    
      {% if section.settings.carousel_title != blank %}
        <div class="marquee">
          <div class="products-carousel__title">
            <span class="h3">
              <span>{{ section.settings.carousel_title }} </span>
              <span>{{ section.settings.carousel_title }} </span>
              <span>{{ section.settings.carousel_title }} </span>
              <span>{{ section.settings.carousel_title }} </span>
            </span>
          </div>

          <div class="products-carousel__title2">
            <span class="h3">
              <span>{{ section.settings.carousel_title }} </span>
              <span>{{ section.settings.carousel_title }} </span>
              <span>{{ section.settings.carousel_title }} </span>
              <span>{{ section.settings.carousel_title }} </span>
            </span>
          </div>
        </div>
      {% endif %}

      <div
        class="swiper products-carousel-swiper"
        data-limit_per_view_mobile="{{ section.settings.carousel_mob }}"
        data-limit_per_view="{{ section.settings.carousel_desk }}"
      >
        {%- render 'stylesheet', name: 'product-card' -%}
        <div class="swiper-wrapper">
          {% for product in collections[section.settings.carousel_coll].products limit: limit %}
            <div class="swiper-slide">
              {%- render 'product-card', product: product, without_css: true -%}
            </div>
          {% endfor %}
        </div>

        {% if collections[section.settings.carousel_coll].products_count > section.settings.carousel_desk and limit > section.settings.carousel_desk %}
          <button class="swiper-button-prev swiper-button" aria-label="{{ 'accessibility.previous_slide' | t }}">
            {%- render 'icon-carousel-arrow' -%}
          </button>
          <button class="swiper-button-next swiper-button" aria-label="{{ 'accessibility.next_slide' | t }}">
            {%- render 'icon-carousel-arrow' -%}
          </button>
        {% endif %}
      </div>

      {% if section.settings.carousel_b_text != blank %}
        <div class="products-carousel__button">
          <a
            href="{{ collections[section.settings.carousel_coll].url }}"
            class="secondary-button"
            style="--sec-color: #000"
          >
            {{- section.settings.carousel_b_text -}}
          </a>
        </div>
      {% endif %}
    {% endif %}
  </div>  

{% endif %}

{% comment %}
{
  "name": "Blogs Carousel",
  "class": "products-carousel",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "carousel_title",
      "label": "Title",
      "default": "New arrivals"
    },
    {
      "type": "range",
      "min": 4,
      "max": 20,
      "step": 1,
      "id": "carousel_coll_lm",
      "label": "Products Quantity",
      "default": 15
    },
    {
      "type": "number",
      "id": "carousel_desk",
      "label": "Desktop Carousel Visible Items #",
      "default": 4
    },
    {
      "type": "number",
      "id": "carousel_mob",
      "label": "Mobile Carousel Visible Items #",
      "default": 2
    },
    {
      "type": "text",
      "id": "carousel_b_text",
      "label": "Button Text",
      "default": "Shop Now"
    }
  ],
  "presets": [
    {
      "name": "Blogs Carousel",
      "category": "Home Page"
    }
  ]
}
{% endcomment %}
